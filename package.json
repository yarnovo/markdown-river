{
  "name": "markdown-river",
  "version": "0.0.0",
  "description": "A high-performance streaming Markdown renderer with incremental parsing",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "dev": "tsx demo/index.ts",
    "copy-dist": "node scripts/copy-dist-to-demo.js",
    "demo": "npm run build && npm run copy-dist && serve demo -p 3000",
    "demo:watch": "node scripts/demo-watch.js",
    "test": "vitest run --passWithNoTests",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "prebuild": "rimraf dist",
    "prepublishOnly": "npm run build",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run lint && npm run typecheck && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yarnovo/markdown-river.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yarnovo/markdown-river/issues"
  },
  "homepage": "https://github.com/yarnovo/markdown-river#readme",
  "workspaces": [
    "examples/*"
  ],
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.0.10",
    "@types/prompts": "^2.4.9",
    "@types/react": "^19.1.8",
    "@vitest/ui": "^3.2.4",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "execa": "^9.6.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "rimraf": "^6.0.1",
    "serve": "^14.2.4",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "markdown",
    "streaming",
    "renderer",
    "incremental",
    "parser",
    "real-time",
    "markdown-parser",
    "markdown-renderer"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "html-react-parser": "^5.2.5",
    "marked": "^16.0.0",
    "mitt": "^3.0.1"
  }
}
